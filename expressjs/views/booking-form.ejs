<!DOCTYPE html>
<html lang="en">

<head>
    <% include ./partials/head %>
</head>

<body>
<div class="body-inner">
    <!-- Header start -->
    <% include ./partials/header %>
    <!--/ Header end -->
    <!-- Banner start -->
    <% include ./partials/banner %>
    <!-- Banner end -->
    <!-- ts Content start -->
    <section class="ts-contact-form">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mx-auto">
                    <h2 class="section-title text-center">
                        <span> Create new booking </span>
                        Booking
                    </h2>
                </div><!-- col end-->
            </div>
            <div class="row">
                <div class="col-lg-8 mx-auto">
                    <form id="contact-form" class="contact-form" method="post">
                        <div class="error-container">
                            <div class="row">
                                <div class="col-md-6" style="padding-bottom: 20px;">
                                    <div class="card">
                                        <div class="card-body">
                                            <label class="control-label">Username</label>
                                            <input class="form-control form-control-subject"
                                                   placeholder="Username" type="text" value="<%= user.userName %>"
                                                   readonly>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6" style="padding-bottom: 20px;">
                                    <div class="card">
                                        <div class="card-body">
                                            <label class="control-label">Yard Name</label>
                                            <input class="form-control form-control-subject"
                                                   placeholder="Yard Name" type="text" value="<%= schedule.yardName %>"
                                                   readonly>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6" style="padding-bottom: 20px;">
                                    <div class="card">
                                        <div class="card-body">
                                            <label class="control-label">Center Name</label>
                                            <input class="form-control form-control-subject"
                                                   placeholder="Center Name" type="text" value="<%= schedule.centerName %>"
                                                   readonly>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6" style="padding-bottom: 20px;">
                                    <div class="card">
                                        <div class="card-body">
                                            <label class="control-label">Schedule date</label>
                                            <input class="form-control form-control-subject"
                                                   placeholder="Schedule Date" type="date" value="<%= convertDateToString(schedule.scheduleDate) %>"
                                                   required>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6" style="padding-bottom: 20px;">
                                    <div class="card">
                                        <div class="card-body">
                                            <label class="control-label">Start Time </label>
                                            <input class="form-control form-control-subject"
                                                   placeholder="Phone Number" type="time" value="<%= schedule.startTime %>"
                                                   readonly>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6" style="padding-bottom: 20px;">
                                    <div class="card">
                                        <div class="card-body">
                                            <label class="control-label">End Time</label>
                                            <input class="form-control form-control-subject"
                                                   placeholder="End Time" type="time" value="<%= schedule.endTime %>"
                                                   readonly>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <section>
                                <div class="sponsors-wrap">
                                    <div class="row sponsor-padding text-center">
                                        <!-- Col 1 end -->
                                        <div class="col-md-6 text-right">
                                            <button type="submit" class="btn"> Confirm </button>
                                        </div>
                                        <!-- Col 2 end -->
                                        <div class="col-md-6 text-left">
                                            <a href="/schedule-list" class="btn">Cancel</a>
                                        </div>
                                    </div>
                                </div>
                            </section>
                        </div>
                    </form><!-- Contract form end -->
                </div>
            </div>
        </div>
</div>
<div class="speaker-shap">
    <img class="shap1" src="../images/shap/home_schedule_memphis2.png" alt="">
</div>
</section>

<!-- footer start-->
<% include ./partials/footer %>
<!-- Body inner end -->
</div>
<% include ./partials/footer-script %>
</body>

</html>