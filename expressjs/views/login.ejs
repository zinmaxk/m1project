<!DOCTYPE html>
<html lang="en">

<head>
    <% include ./partials/head %>
</head>

<body>
<div class="body-inner">
    <!-- Header start -->
    <% include ./partials/header %>
    <!--/ Header end -->
    <!-- Banner start -->
    <% include ./partials/banner %>
    <!-- Banner end -->
    <!-- ts Content start -->
    <section class="text-center">
        <! Login form !>
        <section class="ts-contact-form">
            <div class="container">
                <div class="row">
                    <div class="col-lg-8 mx-auto">
                        <h2 class="section-title text-center">
                            <span> Do you have account already?</span> Login now
                        </h2>
                    </div>
                    <!-- col end-->
                </div>
                <div class="row">
                    <div class="col-lg-8 mx-auto text-left">
                        <form id="contact-form" class="contact-form" action="/auth/login" method="post">
                            <div class="error-container"></div>
                            <div class="col-lg-12 mx-auto">
                                <div class="col-md-12" style="padding-bottom: 20px;">
                                    <div class="card">
                                        <div class="card-body">
                                            <label class="control-label">Email *</label>
                                            <input class="form-control form-control-subject"
                                                   placeholder="Input your email"
                                                   required type="text" name="email">
                                        </div>
                                    </div>

                                </div>
                                <div class="col-md-12" style="padding-bottom: 20px;">
                                    <div class="card">
                                        <div class="card-body">
                                            <label class="control-label">Password *</label>
                                            <input class="form-control form-control-subject"
                                                   placeholder="Input your password" type="password"
                                                   required name="password">
                                        </div>
                                    </div>

                                </div>
                                <div class="text-center"><br>
                                    <button class="btn ladda-button" data-style="expand-left" type="submit"> Login
                                    </button>
                                </div>
                            </div>
                        </form>
                        <!-- Login form end -->
                    </div>
                </div>
            </div>
            <div class="speaker-shap">
                <img class="shap1" src="images/shap/home_schedule_memphis2.png" alt="">
            </div>
        </section>

    </section>

    <!-- footer start-->
    <% include ./partials/footer %>
    <!-- Body inner end -->
</div>
<% include ./partials/footer-script %>
</body>

</html>